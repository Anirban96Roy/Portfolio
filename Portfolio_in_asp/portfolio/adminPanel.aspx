     <asp:ListItem>cryptography</asp:ListItem>
 </asp:DropDownList>
                         <asp:RequiredFieldValidator  InitialValue="select feild" ControlToValidate="dropdownlist1" ForeColor="Aqua" Text="*" SetFocusOnError="true" ID="RequiredFieldValidator3" runat="server" ErrorMessage="field is required"></asp:RequiredFieldValidator>
 

