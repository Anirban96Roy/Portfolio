                            <asp:TextBox ID="TextBox3" runat="server" Text='<%# Bind("reason") %>'></asp:TextBox>
                        <asp:RequiredFieldValidator InitialValue="select feild" ControlToValidate="TextBox3" ForeColor="Aqua" Text="*" SetFocusOnError="true" ID="RequiredFieldValidator5" runat="server" ErrorMessage="reason is required"></asp:RequiredFieldValidator>
 
