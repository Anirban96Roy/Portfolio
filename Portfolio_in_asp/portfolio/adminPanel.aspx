                            <asp:DropDownList ID="footerdropdownlistfeild" runat="server">
                                <asp:ListItem>Select feild</asp:ListItem>
                                <asp:ListItem>NLP</asp:ListItem>
                                <asp:ListItem>image processing</asp:ListItem>
                                <asp:ListItem>cryptography</asp:ListItem>
                            </asp:DropDownList>
                             <asp:RequiredFieldValidator ValidationGroup="Insert" InitialValue="select feild" ControlToValidate="footerdropdownlistfeild" ForeColor="Aqua" Text="*" SetFocusOnError="true" ID="RequiredFieldValidator4" runat="server" ErrorMessage="field is required"></asp:RequiredFieldValidator>
 

                        </FooterTemplate>
                    </asp:TemplateField>
                    <asp:TemplateField HeaderText="reason" SortExpression="reason">
